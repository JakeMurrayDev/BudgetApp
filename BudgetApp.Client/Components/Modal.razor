@inherits CommonBase
<CascadingValue Value="this" IsFixed="true">
    @if (_isDisplayed)
    {
        <div class="modal d-block"
         tabindex="-1"
         @attributes="AdditionalAttributes">
            <div class="modal-dialog @GetModalCenterClass()">
                <div class="modal-content">
                    @ChildContent
                </div>
            </div>
        </div>
    }
</CascadingValue>
